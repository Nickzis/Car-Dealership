@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<html lang="bg">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registration - Workout Planner</title>
    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .signup-container {
            height: 100vh;
        }
    </style>
</head>
<body>
    <div class="container signup-container">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-md-6">
                <div class="Card shadow">
                    <div class="Card-body">
                        <h3 class="Card-title text-center mb-4">Sign Up</h3>
                        <form id="signupForm" method="post">
                            <label asp-for="User.Name" class="control-label"></label>
                            <input asp-for="User.Name" class="form-control" placeholder="Enter Name"/>
                            <span asp-validation-for="User.Name" class="text-danger"></span>
                            <div class="form-group">
                                <label asp-for="User.Email" class="control-label"></label>
                                <input asp-for="User.Email" class="form-control" placeholder="Enter E-mail"/>
                                <span asp-validation-for="User.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="User.Password" class="control-label"></label>
                                <input asp-for="User.Password" class="form-control" placeholder="Enter Password"/>
                                <span asp-validation-for="User.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="User.Password" class="control-label">Confirm Password</label>
                                <input asp-for="User.Password" class="form-control" placeholder="Enter Password again" />
                                <span asp-validation-for="User.Password" class="text-danger"></span>
                            </div>
                            <label asp-for="User.FirstName" class="control-label"></label>
                            <input asp-for="User.FirstName" class="form-control" placeholder="Enter FirstName" />
                            <span asp-validation-for="User.FirstName" class="text-danger"></span>
                            <div class="form-group">
                                <label asp-for="User.FamilyName" class="control-label"></label>
                                <input asp-for="User.FamilyName" class="form-control" placeholder="Enter LastName" />
                                <span asp-validation-for="User.FamilyName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="User.EGN" class="control-label"></label>
                                <input asp-for="User.EGN" class="form-control" placeholder="Enter EGN" />
                                <span asp-validation-for="User.EGN" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="User.PhoneNumber" class="control-label">PhoneNumber</label>
                                <input asp-for="User.PhoneNumber" class="form-control" placeholder="Enter PhoneNumber" />
                                <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block" value="Sign up">
                                Sign Up
                            </button>
                        </form>
                        <div id="signupMessage" class="mt-3"></div>
                        <p class="mt-3 text-center">
                            Already have an account? <a asp-area="" asp-page="/LogIn">Log in</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
