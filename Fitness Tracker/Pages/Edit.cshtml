@page
@using Fitness_Tracker.Model
@model Fitness_Tracker.Pages.EditModel

@{

    ViewData["Title"] = "Edit";

}

<h1>Edit</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <li class="list-group-item mt-3 d-flex justify-content-between align-items-center">
            @Model.CurrentCar.Name <br /> @Model.CurrentCar.Date <br /> @Model.CurrentCar.Description <br /> @Model.CurrentCar.PassengerSeats <br /> @Model.CurrentCar.PricePerDay <br />
            
        </li>
        @if (Model.User.IsAdmin)
        {

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Car.ID" />
            <div class="form-group">

                <label asp-for="Car.Name" class="control-label"></label>
                <input asp-for="Car.Name" class="form-control" />
                <span asp-validation-for="Car.Name" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="Car.Date" class="control-label"></label>
                <input asp-for="Car.Date" class="form-control" />
                <span asp-validation-for="Car.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.PassengerSeats" class="control-label">Passenger seats:</label>
                <input asp-for="Car.PassengerSeats" class="form-control" placeholder="Enter Passenger seat count" />
                <span asp-validation-for="Car.PassengerSeats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Description" class="control-label">Description:</label>
                <input asp-for="Car.Description" class="form-control" placeholder="Enter Description" />
                <span asp-validation-for="Car.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.PricePerDay" class="control-label">PricePerDay:</label>
                <input asp-for="Car.PricePerDay" class="form-control" placeholder="Enter PricePerDay" />
                <span asp-validation-for="Car.PricePerDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        }
    </div>
</div>

<div>
    <a asp-page="./CarList">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}